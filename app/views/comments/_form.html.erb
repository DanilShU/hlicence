<%= form_with model: [ @hlicence, @hlicence.comments.build ] do |form| %>
  <p>
    <%= form.label :user %><br>
    <%= form.text_field :user %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
 </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>